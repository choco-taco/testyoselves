<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-4">Create A Study Guide</h1>
        <p class="lead">Build your study guide here by adding questions and answers to this page.</p>
    </div>
</div>

<div class="container" style="max-width: 50%">

    <!-- *************************************** -->
    <!-- ============ QUESTION FORM ============ -->
    <!-- *************************************** -->

    <form action="/dashboard/create/guide" method="POST">

        <div class="card text-white bg-primary mb-3" style="max-width: 100%;">
            <div class="card-body">
                <h4 class="card-title">Name</h4>
                <div class="form-group">
                    <label class="col-form-label col-form-label-lg" for="name"></label>
                    <input class="form-control form-control-lg" name="name" type="text" placeholder="ex: Biology Test" id="name">
                </div>
            </div>
        </div>

        <div id="problems">
            {{!-- Questions go here --}}
        </div>

        <div class="card bg-light mb-3">
        <!-- Question Header -->
            <div class="card-body">
                <div class="form-group">
                    <!-- Question Text Area -->
                    <label for="question">Question</label>
                    <textarea class="form-control" id="new-question" rows="1"></textarea>
                </div>
                <!-- Answer Text Area -->
                <div class="form-group">
                    <label for="answer">Answer</label>
                    <textarea class="form-control" id="new-answer" rows="1"></textarea>
                </div>
                <!-- Submit Button -->
                <div class="text-center">
                    <button type="button" class="btn btn-primary" id="add-problem">Add</button>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-secondary btn-lg btn-block">Create Study Guide</button>
    </form>

</div>